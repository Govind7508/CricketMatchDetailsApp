<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="15dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:background="@color/light"
            android:orientation="horizontal"
            android:weightSum="1"
            app:layout_constraintBottom_toBottomOf="parent">




            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/joining"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/nunito_extrabold"
                android:gravity="center"
                android:layout_marginStart="@dimen/_10sdp"
                android:text="JOININGS"
                android:layout_alignParentStart="true"
                android:textSize="@dimen/_7sdp"
                android:textColor="@color/black" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/contest"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/joining"
                android:fontFamily="@font/nunito_extrabold"
                android:gravity="center"
                android:text="JOININGS"
                android:textColor="@color/black"
                android:textSize="@dimen/_7sdp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/rank"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="22dp"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/nunito_extrabold"
                android:gravity="center"
                android:text="JOININGS"
                android:drawableLeft="@drawable/medal_small"
                android:textColor="@color/black"
                android:layout_marginEnd="@dimen/_10sdp"
                android:textSize="@dimen/_7sdp" />




        </RelativeLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/T20TV"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:fontFamily="@font/montserrat_semibold"
                android:gravity="center"
                android:text="T20"
                android:textColor="@color/black"
                android:textSize="@dimen/_8sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/V1"
                android:layout_width="@dimen/_1sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@color/black"
                android:maxWidth="@dimen/_90sdp"
                android:minWidth="@dimen/_20sdp"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@+id/T20TV"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/worldCupTV"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:fontFamily="@font/montserrat_semibold"
                android:gravity="center_vertical"
                android:maxWidth="@dimen/_90sdp"
                android:minWidth="@dimen/_20sdp"
                android:text="WorldCup"
                android:textColor="@color/black"
                android:textSize="@dimen/_8sdp"
                app:layout_constraintStart_toEndOf="@+id/V1"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/lineUpOutTV"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:clickable="true"
                android:singleLine="true"
                android:fontFamily="@font/nunito_extrabold"
                android:gravity="center_vertical"
                android:maxWidth="@dimen/_90sdp"
                android:minWidth="@dimen/_20sdp"
                android:src="@drawable/home"
                android:text="Line Up Out"
                android:visibility="gone"
                android:textColor="@color/black"
                android:textSize="@dimen/_8sdp"
                android:tint="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/tshirtLogoIV"
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:padding="@dimen/_1sdp"
                android:visibility="gone"
                android:src="@drawable/home"
                android:tint="@color/black"
                app:layout_constraintEnd_toStartOf="@+id/lineUpOutTV"
                app:layout_constraintTop_toTopOf="parent" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/statusTextView"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:clickable="true"
                android:background="@drawable/live_background"
                android:singleLine="true"
                android:fontFamily="@font/nunito_extrabold"
                android:gravity="center_vertical"
                android:maxWidth="@dimen/_90sdp"
                android:minWidth="@dimen/_20sdp"
                android:src="@drawable/home"
                android:text="Status"
                android:layout_marginBottom="@dimen/_2sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"
                android:drawableLeft="@drawable/dot"
                android:tint="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/V2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/T20TV" />


            <View
                android:id="@+id/team1Background"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_15sdp"
                android:background="@color/black"
                app:layout_constraintBottom_toBottomOf="@+id/Team1IV"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/Team1IV" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/Team1IV"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:scaleType="fitXY"
                android:src="@drawable/splash_background"
                app:layout_constraintBottom_toBottomOf="@+id/Team2IV"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/V2" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/Team1NameTV"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:gravity="center_vertical"
                android:text="TeamName"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"
                app:fontFamily="@font/nunito_extrabold"
                app:layout_constraintBottom_toBottomOf="@+id/Team1IV"
                app:layout_constraintStart_toEndOf="@+id/Team1IV"
                app:layout_constraintTop_toTopOf="@+id/Team1IV"
                tools:ignore="RtlCompat" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/dateTV"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_15sdp"
                android:fontFamily="@font/nunito_extrabold"
                android:gravity="center"
                android:text="6-10-2024"
                android:visibility="invisible"
                android:textColor="@color/black"
                android:textSize="@dimen/_8sdp"
                app:layout_constraintEnd_toStartOf="@+id/Team2NameTV"
                app:layout_constraintStart_toEndOf="@+id/Team1NameTV"
                app:layout_constraintTop_toTopOf="@+id/Team2NameTV" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/statusTV"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_20sdp"
                android:fontFamily="@font/nunito_semibold"
                android:gravity="center"
                android:text="VS"
                android:textColor="@color/colorSecondary"
                android:textSize="@dimen/_15sdp"
                app:layout_constraintBottom_toTopOf="@+id/timeTV"
                app:layout_constraintEnd_toStartOf="@+id/Team2NameTV"
                app:layout_constraintStart_toEndOf="@+id/Team1NameTV"
                app:layout_constraintTop_toBottomOf="@+id/dateTV" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/timeTV"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_15sdp"
                android:fontFamily="@font/nunito_extrabold"
                android:gravity="center"
                android:text="30:15 min"
                android:textColor="@color/black"
                android:visibility="invisible"
                android:textSize="@dimen/_8sdp"
                app:layout_constraintBottom_toBottomOf="@+id/Team1NameTV"
                app:layout_constraintEnd_toStartOf="@+id/Team2NameTV"
                app:layout_constraintStart_toEndOf="@+id/Team1NameTV"
                app:layout_constraintTop_toBottomOf="@+id/statusTV" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/Team2NameTV"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:gravity="center_vertical"
                android:text="TeamName"
                android:fontFamily="@font/nunito_extrabold"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintBottom_toBottomOf="@+id/Team2IV"
                app:layout_constraintEnd_toStartOf="@+id/Team2IV"
                app:layout_constraintTop_toTopOf="@+id/Team2IV"
                tools:ignore="RtlCompat" />


            <View
                android:id="@+id/team2Background"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_15sdp"
                android:background="@color/black"
                app:layout_constraintBottom_toBottomOf="@+id/Team2IV"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/Team2IV" />


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/Team2IV"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:scaleType="fitXY"
                android:src="@drawable/splash_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/V2" />

            <View
                android:id="@+id/view"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginTop="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Team1IV" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>