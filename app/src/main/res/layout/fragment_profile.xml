<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".home.ui.fragment.ProfileFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/dashboard_background_gradient">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/circles"
                android:id="@+id/imgIV"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginTop="60dp"
                android:gravity="center_vertical"
                android:text="Hi Welcome !"
                android:textColor="@color/white"
                android:textSize="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_20sdp"
                app:fontFamily="@font/nunito_extrabold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@+id/imgIV"
                android:background="@drawable/home_background_color"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">


                <ScrollView
                    android:layout_marginTop="@dimen/_50sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:ignore="MissingClass">


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/firstNameTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/firstname"
                            android:textSize="@dimen/_14sdp"
                            android:textColor="@color/black"
                            android:layout_marginTop="@dimen/_30sdp"
                            android:gravity="center"
                            android:layout_marginStart="@dimen/_15sdp"
                            app:fontFamily="@font/montserrat_semibold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/firstNameTextV"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:layout_marginEnd="@dimen/_15sdp"
                            android:hint="Enter your Name"
                            android:fontFamily="@font/nunito_medium"
                            android:singleLine="true"
                            android:textColorHint="@color/colorTextHintDefault"
                            android:textColor="@color/black"
                            android:padding="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            app:layout_constraintStart_toStartOf="parent"
                            android:background="@drawable/mobile_number_button_selection"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/firstNameTV" />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/lastNameTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lastname"
                            android:textSize="@dimen/_14sdp"
                            android:textColor="@color/black"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:gravity="center"
                            android:layout_marginStart="@dimen/_15sdp"
                            app:fontFamily="@font/montserrat_semibold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/firstNameTextV" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/lastNameTextV"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:layout_marginEnd="@dimen/_15sdp"
                            android:hint="Enter your Last Name"
                            android:fontFamily="@font/nunito_medium"
                            android:textColorHint="@color/colorTextHintDefault"
                            android:textColor="@color/black"                            android:singleLine="true"
                            android:padding="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            app:layout_constraintStart_toStartOf="parent"
                            android:background="@drawable/mobile_number_button_selection"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/lastNameTV" />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/phoneNumberTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/phone"
                            android:textSize="@dimen/_14sdp"
                            android:textColor="@color/black"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:gravity="center"
                            android:layout_marginStart="@dimen/_15sdp"
                            app:fontFamily="@font/montserrat_semibold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/lastNameTextV" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/phoneNumberTextV"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_15sdp"
                            android:background="@drawable/mobile_number_button_selection"
                            android:gravity="start"
                            android:fontFamily="@font/nunito_medium"
                            android:hint="Enter your phone number"
                            android:padding="@dimen/_10sdp"
                            android:singleLine="true"
                            android:textColorHint="@color/colorTextHintDefault"
                            android:textColor="@color/black"                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/phoneNumberTV" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/pincodeTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/post_code"
                            android:textSize="@dimen/_14sdp"
                            android:textColor="@color/black"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:gravity="center"
                            android:layout_marginStart="@dimen/_15sdp"
                            app:fontFamily="@font/montserrat_semibold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/phoneNumberTextV" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/pincodeTextV"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:inputType="number"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:layout_marginEnd="@dimen/_15sdp"
                            android:hint="Enter post code or address"
                            android:textColorHint="@color/colorTextHintDefault"
                            android:textColor="@color/black"                            android:singleLine="true"
                            android:maxLength="10"
                            android:padding="@dimen/_10sdp"
                            android:fontFamily="@font/nunito_medium"
                            android:layout_marginTop="@dimen/_10sdp"
                            app:layout_constraintStart_toStartOf="parent"
                            android:background="@drawable/mobile_number_button_selection"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/pincodeTV" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/profileSubmitBT"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45sdp"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_35sdp"
                            android:layout_marginEnd="@dimen/_15sdp"
                            android:background="@drawable/welcome_button_selection"
                            android:gravity="center"
                            android:text="@string/edit_profile"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_14sdp"
                            android:fontFamily="@font/nunito_extrabold"
                            app:flow_horizontalAlign="center"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/pincodeTextV" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50sdp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginTop="@dimen/_10sdp"
                            app:layout_constraintTop_toBottomOf="@+id/profileSubmitBT" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </ScrollView>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="@dimen/_120sdp"
                app:layout_constraintTop_toTopOf="parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_40sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_50sdp"
                    android:background="@drawable/profile_background">

                </LinearLayout>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:src="@drawable/splash_background"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="2dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/fullName"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:fontFamily="@font/nunito_extrabold"
                    android:text="@string/app_name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_18sdp"
                    android:padding="@dimen/_2sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/profile_image" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
</layout>